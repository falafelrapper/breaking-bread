{{!-- profile page --}}
<div class="profile-window">

    <div>

        <h2 class="userHeader">{{name}}'s Kitchen</h2>

    </div>

    <section>

        <h2 id="recipe-start">Share a New Recipe</h2>

        <form class="recipe-Creator">

            <div class="create1">
                <label for="recipeName">Recipe Name:</label>
                <input type="text" id="recipeName" name="recipeName" required>

                <label for="prepTime">Prep Time:</label>
                <input type="text" id="prepTime" name="prepTime" required>

                <label for="recipeCategory">Category:</label>
                <select id="recipeCategory" name="recipeCategory" required>
                    <option value="breakfast">Breakfast</option>
                    <option value="brunch">Brunch</option>
                    <option value="lunch">Lunch</option>
                    <option value="dinner">Dinner</option>
                    <option value="appetizer">Appetizer</option>
                    <option value="sideDish">Side Dishes</option>
                    <option value="dessert">Dessert</option>
                    <option value="snack">Snacks</option>
                    {{!-- Add More Categories --}}
                </select>
            </div>

            <div class="create2">

                <label for="recipeDescription">Description:</label>
                <textarea id="recipeDescription" name="recipeDescription" required></textarea>

                <label for="recipeIngredients">Ingredients:</label>
                <textarea id="recipeIngredients" name="recipeIngredients" required></textarea>

                <label for="instructions">Instructions:</label>
                <textarea id="instructions" name="instructions" required></textarea>

            </div>
            <div class="create3">
                <button id="upload_widget" class="cloudinary-button">Upload files</button>

            </div>
            <div class="create4">
                <button type="submit" id="shareRecipeBtn" class="btn btn-primary">Share Recipe</button>
            </div>
        </form>
        <div class="recipe-window">
            <h2>My Recipes</h2>
            {{#each recipes}}
            <div class="recipe-card">
                <div>
                    <h2>
                        <a href="/recipes/{{id}}">{{name}}</a>
                    </h2>
                    <p>
                        {{name}} - {{category.name}}
                    </p>
                    <p>Created by {{user.name}}</p>
                </div>
                <div>
                    <p>
                        {{description}}
                    </p>
                    <p>
                        {{time}}
                    </p>
                </div>
                <button class="btn" data-id="{{id}}">Delete Recipe</button>
            </div>
            {{/each}}
        </div>
    </section>
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<script src="/js/profile.js"></script>