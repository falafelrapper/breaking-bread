{{!-- recipes page --}}
<div class="recipe-card">
    <h1>{{name}}</h1>
    <div>
        {{#if image_url}}
        <img src="{{image_url}}">
        {{/if}}
        <div>
            <h2>Created by {{user.name}}</h2>
            <p>Category: {{category.name}}</p>
        </div>

        <div>
            <p>{{description}}</p>
            <p>Prep Time: {{time}}</p>
            <p>Ingredients:</p>
            <p>{{ingredients}}</p>
            <p>Instructions:</p>
            <p>{{instructions}}</p>
        </div>
    </div>
</div>